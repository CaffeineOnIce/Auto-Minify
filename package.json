{
    "name": "autominify",
    "displayName": "Auto-Minify",
    "description": "Automatically minify your HTML, CSS, and JS files on save",
    "version": "2.3.0",
    "repository": "https://github.com/caffeineonice/autominify",
    "license": "MIT",
    "icon": "icon.png",
    "author": "CaffeineOnIce",
    "publisher": "CaffeineOnIce",
    "categories": [
        "Other"
    ],
    "homepage": "https://github.com/CaffeineOnIce/AutoMinify/blob/main/README.md",
    "activationEvents": [
        "onLanguage:html",
        "onLanguage:css",
        "onLanguage:javascript",
        "onDidSaveTextDocument"
    ],
    "main": "./extension.js",
    "contributes": {
        "commands": [
            {
                "command": "autominify.minify",
                "title": "Minify it"
            }
        ],
        "configuration": {
            "title": "Auto-Minify",
            "type": "object",
            "properties": {
                "autominify.rootPathName": {
                    "type": "string",
                    "default": "",
                    "description": "Only run under paths containing (split with comma). EG: public,dist"
                },
                "autominify.rootChangeRootName": {
                    "type": "boolean",
                    "default": false,
                    "description": "Minify to new path under root"
                },
                "autominify.enableHtmlMinification": {
                    "type": "boolean",
                    "default": true,
                    "description": "Toggle HTML minification."
                },
                "autominify.enableMinFileHtml": {
                    "type": "boolean",
                    "default": false,
                    "description": "Toggle minification for HTML files that already have 'min' in their filenames."
                },
                "autominify.enableCssMinification": {
                    "type": "boolean",
                    "default": true,
                    "description": "Toggle CSS minification."
                },
                "autominify.enableMinFileCss": {
                    "type": "boolean",
                    "default": false,
                    "description": "Toggle minification for CSS files that already have 'min' in their filenames."
                },
                "autominify.enableJsMinification": {
                    "type": "boolean",
                    "default": true,
                    "description": "Toggle JavaScript minification."
                },
                "autominify.enableMinFileJs": {
                    "type": "boolean",
                    "default": false,
                    "description": "Toggle minification for JavaScript files that already have 'min' in their filenames."
                },
                "autominify.enableSourceMaps": {
                    "type": "boolean",
                    "default": false,
                    "description": "Toggle source maps for JavaScript minification."
                },
                "autominify.enableSeparateFolderHtml": {
                    "type": "boolean",
                    "default": false,
                    "description": "Toggle saving minified HTML files in a 'min' folder."
                },
                "autominify.enableSeparateFolderCss": {
                    "type": "boolean",
                    "default": false,
                    "description": "Toggle saving minified CSS files in a 'min' folder."
                },
                "autominify.enableSeparateFolderJs": {
                    "type": "boolean",
                    "default": false,
                    "description": "Toggle saving minified JS files in a 'min' folder."
                },
                "autominify.htmlminifier": {
                    "type": "object",
                    "default": {
                        "caseSensitive": true,
                        "collapseWhitespace": true,
                        "collapseInlineTagWhitespace": true,
                        "continueOnParseError": true,
                        "removeComments": true,
                        "removeAttributeQuotes": true,
                        "minifyCSS": true,
                        "minifyJS": true
                    },
                    "description": "Options for the HTML minifier."
                },
                "autominify.cleancss": {
                    "type": "object",
                    "default": {
                        "level": {
                            "1": {
                                "all": true
                            }
                        }
                    },
                    "description": "Options for the CleanCSS minifier."
                },
                "autominify.terser": {
                    "type": "object",
                    "default": {
                        "mangle": false
                    },
                    "description": "Options for the Terser minifier."
                }
            }
        }
    },
    "dependencies": {
        "clean-css": "^5.3.3",
        "html-minifier": "^4.0.0",
        "terser": "^5.26.0"
    },
    "devDependencies": {
        "@types/node": "^14.14.41",
        "@types/vscode": "^1.60.0",
        "@vscode/vsce": "^2.22.0"
    },
    "engines": {
        "vscode": "^1.60.0"
    }
}
